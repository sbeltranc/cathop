<body class="cat-no-scroll">
    <div class="cat-scanlines"></div>
    <nav class="cat-nav">
        <div class="cat-nav-github">
            <a class="cat-nav-github-link" href="https://github.com/sbeltranc/cathop">
              <%= image_tag "github.svg", class: "cat-github-icon", alt: "GitHub", width: 25, height: 25 %>
            </a>
        </div>
        
        <div class="cat-nav-center">
            <a class="cat-brand" href="/">cathop.lat</a>
        </div>
    </nav>

    <div class="cat-content-wrapper">
        <div class="cat-header">
            <div class="cat-header-box">
                <div class="cat-noise-wrapper">
                    <div class="cat-noise"></div>
                </div>
                <%= image_tag "cathop_logo.png", alt: "Header Image", class: "cat-logo", loading: "eager" %>
            </div>
        </div>
        <section class="cat-search">
            <div class="cat-search-bar" 
                 data-controller="search url base64 ip domain"
                 data-search-messages-value="<%= {
                   ip: t('service_messages.ip'),
                   roblox: t('service_messages.roblox'),
                   youtube: t('service_messages.youtube'),
                   spotify: t('service_messages.spotify'),
                   soundcloud: t('service_messages.soundcloud'),
                   base64: t('service_messages.base64'),
                   domain: t('service_messages.domain'),
                   unknown: t('service_messages.unknown'),
                   generic_url: t('service_messages.generic_url')
                 }.to_json %>">
                <div class="cat-message" data-search-target="message"></div>
                <div class="cat-search-input-group">
                    <input id="searchInput" 
                           type="text" 
                           placeholder="<%= t("search_placeholder") %>" 
                           aria-label="Search"
                           value="<%= @query %>"
                           data-search-target="input">
                    <button id="searchButton" type="button" aria-label="Search">
                        <svg width="20" height="20" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path fill="currentColor" d="M6 1h3v1h2v1h1v2h1v3h-1v1h-1v1H9v1H6v-1H4v-1H3V6H2V3h1V2h1V1h2z"/>
                            <path fill="currentColor" d="M11 11h1v1h1v1h1v1h-1v1h-1v-1h-1v-1h-1v-1h1z"/>
                        </svg>
                    </button>
                </div>
                <div data-search-target="url" data-controller="url"></div>
                <div data-search-target="base64" data-controller="base64"></div>
                <div data-search-target="ip" data-controller="ip"></div>
                <div data-search-target="domain" data-controller="domain"></div>
            </div>
            <div class="cat-suggestions">
                <p class="cat-suggestions-title">try searching for:</p>
                <div class="cat-suggestions-list">
                    <span class="cat-suggestion">https://www.youtube.com/watch?v=dQw4w9WgXcQ</span>
                    <span class="cat-suggestion">8.8.8.8</span>
                    <span class="cat-suggestion">google.com</span>
                    <span class="cat-suggestion">SGVsbG8=</span>
                    <span class="cat-suggestion">https://open.spotify.com/track/6dOtVTDdiauQNBQEDOtlAB</span>
                    <span class="cat-suggestion">https://soundcloud.com/menthol100s/carve-out-my-left-eye-idiot</span>
                    <span class="cat-suggestion">https://roblox.com/users/1/profile</span>
                </div>
            </div>
        </section>
    </div>
</body>